type Post {
  id: ID!
  title: String!
  content: String!
  author: User!
  allowComments: Boolean!
  comments(limit: Int, offset: Int): [Comment!]!
}

type Comment {
  id: ID!
  text: String!
  post: Post!
  author: User!
  children(limit: Int, offset: Int): [Comment!]!
  createdAt: String!
}

type User {
  id: ID!
  name: String!
}

input PostInput {
  title: String!
  content: String!
  authorId: ID!
  allowComments: Boolean!
}

input CommentInput {
  text: String!
  postId: ID!
  authorId: ID!
  parentId: ID
}

input UserInput {
  name: String!
}
